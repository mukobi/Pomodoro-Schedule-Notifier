<Window x:Class="PomodoroScheduleNotifier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PomodoroScheduleNotifier"
        mc:Ignorable="d"
        Title="Pomodoro Schedule Notifier"
        SizeToContent="WidthAndHeight"
        MinWidth="220"
        WindowStartupLocation="Manual"
        WindowStyle="None"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Background="Transparent"
        Foreground="#FF1B1B1B"
        FontFamily="Bahnschrift"
        Deactivated="Window_Deactivated">
    <Border CornerRadius="14"
            Background="#FFF7F7F7"
            BorderBrush="#22000000"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="22" ShadowDepth="3" Opacity="0.18" Color="#000000"/>
        </Border.Effect>

        <Grid Margin="0,12">
            <Grid.Resources>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#2B8BD4"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="#2B8BD4"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Padding" Value="10,4"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
                <Style TargetType="TextBox">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="BorderBrush" Value="#FFD0D0D0"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Padding" Value="6,2"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TextBox">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="6">
                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="StatusText"
                       Grid.Row="0"
                       FontSize="16"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Text="Status"/>

            <TextBlock Grid.Row="1"
                       Margin="0,12,0,8"
                       HorizontalAlignment="Center"
                       Foreground="#FF6B6B6B"
                       Text="Volume gain (dB)"/>

            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <Button x:Name="VolumeDownButton"
                        Content="−"
                        Width="34"
                        Height="30"
                        Click="VolumeDownButton_Click"/>
                <TextBox x:Name="VolumeDbText"
                         Width="74"
                         Height="30"
                         Margin="8,0"
                         FontSize="14"
                         VerticalContentAlignment="Center"
                         TextAlignment="Center"
                         LostFocus="VolumeDbText_LostFocus"
                         KeyDown="VolumeDbText_KeyDown"/>
                <Button x:Name="VolumeUpButton"
                        Content="+"
                        Width="34"
                        Height="30"
                        Click="VolumeUpButton_Click"/>
            </StackPanel>

            <Button x:Name="PlayPhaseButton"
                    Grid.Row="3"
                    Margin="0,14,0,0"
                    HorizontalAlignment="Center"
                    Height="32"
                    MinWidth="190"
                    Content="Play Current Phase"
                    Click="PlayPhaseButton_Click"/>
        </Grid>
    </Border>
</Window>
