<Window x:Class="PomodoroScheduleNotifier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PomodoroScheduleNotifier"
        mc:Ignorable="d"
        Title="Pomodoro Schedule Notifier"
        SizeToContent="WidthAndHeight"
        MinWidth="240"
        WindowStartupLocation="Manual"
        WindowStyle="None"
        ShowInTaskbar="False" Background="#FF181818" Foreground="#FFEEEEEE"
        Deactivated="Window_Deactivated">
    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="StatusText"
                   Grid.Row="0"
                   FontSize="14"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   Text="Status"/>

        <TextBlock Grid.Row="1"
                   Margin="0,12,0,6"
                   HorizontalAlignment="Center"
                   Text="Volume gain (dB)"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="VolumeDownButton" Content="-" Width="28" Height="24" Click="VolumeDownButton_Click"/>
            <TextBox x:Name="VolumeDbText"
                     Width="60"
                     Height="24"
                     Margin="6,0"
                     VerticalContentAlignment="Center"
                     TextAlignment="Center"
                     LostFocus="VolumeDbText_LostFocus"
                     KeyDown="VolumeDbText_KeyDown"/>
            <Button x:Name="VolumeUpButton" Content="+" Width="28" Height="24" Click="VolumeUpButton_Click"/>
        </StackPanel>

        <Button x:Name="PlayPhaseButton"
                Grid.Row="3"
                Margin="0,12,0,0"
                HorizontalAlignment="Center"
                Height="28"
                Content="Play Current Phase"
                Click="PlayPhaseButton_Click"/>
    </Grid>
</Window>
